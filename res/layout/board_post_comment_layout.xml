<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/board_post_comment_comment_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <LinearLayout
            android:id="@+id/board_post_comment_whitespace_section"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"/>
        <LinearLayout
            android:id="@+id/board_post_comment_content_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
			<View
                android:id="@+id/board_post_comment_content_divider_top"
                android:layout_height="1dip"
                android:layout_width="match_parent"
                android:background="@color/background_gradient_end"/>
            <TextView
                android:id="@+id/board_post_comment_content_title"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_margin="@dimen/margin_medium"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/text_micro"
                 android:textStyle="bold"
                android:textIsSelectable="true"/>
            <TextView
                android:id="@+id/board_post_comment_content"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_marginRight="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_medium"
                android:textColor="@color/lighter_grey"
                android:textSize="@dimen/text_micro"
                android:textIsSelectable="true"/>
            <RelativeLayout
				android:id="@+id/board_post_comment_info_section"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <LinearLayout
                    	android:id="@+id/board_post_comment_author_section"
						android:layout_height="wrap_content"
                		android:layout_width="wrap_content"
                		android:layout_marginLeft="@dimen/margin_medium"
                		android:layout_marginRight="@dimen/margin_medium"
                		android:layout_marginBottom="@dimen/margin_medium"
                		android:layout_alignParentRight="true" 
                		android:orientation="horizontal">
                    <TextView
                	    android:id="@+id/board_post_comment_author_text_view"
						android:layout_height="wrap_content"
                		android:layout_width="wrap_content"
                		android:layout_marginLeft="@dimen/margin_medium"
                		android:layout_marginRight="@dimen/margin_medium"
                	    android:textSize="@dimen/text_really_micro"
                	    android:textColor="@color/highlighted_blue" 
                	    android:textIsSelectable="true"/>
					<TextView
                	    android:id="@+id/board_post_comment_date_time_text_view"
						android:layout_height="wrap_content"
                		android:layout_width="wrap_content"
                		android:layout_marginLeft="@dimen/margin_medium"
                		android:layout_marginRight="@dimen/margin_medium"
                	    android:textSize="@dimen/text_really_micro"
                	    android:textColor="@color/lighter_grey" 
                	    android:textIsSelectable="true"/>
                </LinearLayout>                	
				<TextView
                	    android:id="@+id/board_post_comment_this_view"
						android:layout_height="wrap_content"
                		android:layout_width="match_parent"
                		android:layout_marginLeft="@dimen/margin_medium"
                		android:layout_marginRight="@dimen/margin_medium"
                		android:layout_marginBottom="@dimen/margin_medium"
                		android:layout_below="@id/board_post_comment_author_section"
                		android:layout_alignParentRight="true"
                	    android:textSize="@dimen/text_really_micro"
                	    android:textColor="@color/lighter_grey"
                	    android:textIsSelectable="true"/>
                </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/board_post_comment_action_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone" >
    </LinearLayout>

</LinearLayout>