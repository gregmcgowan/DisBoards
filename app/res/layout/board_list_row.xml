<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <View 
        android:id="@+id/board_post_list_row_read_marker"
        android:layout_width="10dip"
        android:layout_height="10dip"
        android:background="@drawable/filled_blue_circle"
        android:layout_gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/board_post_list_row_read_marker"
        android:layout_centerVertical="true"
         >

        <TextView
            android:id="@+id/board_post_list_row_sticky"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@color/highlighted_blue"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:text="@string/sticky_text"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/board_post_list_row_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_toRightOf="@id/board_post_list_row_sticky"
            android:text="Here is the title of the thread"
            android:textColor="@color/darkest_grey"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/board_post_list_row_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/board_post_list_row_title"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:text="by some author"
            android:textColor="@color/highlighted_blue"
            android:textSize="@dimen/text_micro" />

        <TextView
            android:id="@+id/board_post_list_row_number_of_replies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/board_post_list_row_author"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:text="500 replies"
            android:textColor="@color/darkest_grey"
            android:textSize="@dimen/text_really_micro" />

        <TextView
            android:id="@+id/board_post_list_row_last_updated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/board_post_list_row_author"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:layout_toRightOf="@id/board_post_list_row_number_of_replies"
            android:text="Updated five minutes ago"
            android:textColor="@color/darkest_grey"
            android:textSize="@dimen/text_really_micro" />
    </RelativeLayout>

</RelativeLayout>