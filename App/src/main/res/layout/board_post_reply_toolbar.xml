<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:contentInsetStart="0dp"
        android:id="@+id/toolbar"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:background="?attr/colorPrimary">

    <LinearLayout
            android:background="@color/background_colour"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1">

            <ImageButton
                    android:id="@+id/back_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/toolbar_button_padding"
                    android:paddingRight="@dimen/toolbar_button_padding"
                    android:background="@drawable/selectable_background_dis_boards"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:theme="@style/Theme.Dis_boards.toolbarButton"
                    android:src="@drawable/ic_arrow_back_black"/>

            <ImageView
                    android:src="@drawable/logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"/>
            <ImageButton
                    android:id="@+id/reply_send_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/toolbar_button_padding"
                    android:paddingRight="@dimen/toolbar_button_padding"
                    android:background="@drawable/selectable_background_dis_boards"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_send_black_24dp"/>
        </RelativeLayout>

        <include
                layout="@layout/toolbar_bottom_section"/>
    </LinearLayout>
</android.support.v7.widget.Toolbar>